<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.messageapp.messageapp.EditFriendsActivity">
    <AutoCompleteTextView android:id="@+id/myautocomplete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:hint="@string/autocomplete_search_friends_label"
        android:paddingBottom="@dimen/activity_horizontal_margin"
    />
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@android:id/list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/myautocomplete" />
</RelativeLayout>
