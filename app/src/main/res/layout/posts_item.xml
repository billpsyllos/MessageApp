<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/postText"
        android:paddingLeft="@dimen/senderLabel_padding_left"
        android:paddingTop="@dimen/senderLabel_padding_top"
        android:paddingBottom="@dimen/senderLabel_padding_bottom"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/authorLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/descriptionLabel_text_size"
        android:paddingLeft="@dimen/discriptionLabel_padding_left"
        android:paddingBottom="@dimen/descriptionLabel_padding_bottom"/>


</RelativeLayout>
