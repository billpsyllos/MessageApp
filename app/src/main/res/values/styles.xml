<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BackgroundColor" parent="@android:style/TextAppearance">
        <item name="android:background">#ff2c2f36</item>
    </style>
    <style name="InputTextsStyle" parent="@android:style/TextAppearance">
        <item name="android:textColorHint">#b4bab6b4</item>
        <!--<item name="android:background">#FFFFFF</item>-->
    </style>
    <style name="AppName" parent="@android:style/TextAppearance">
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="GridView">
        <item name="android:padding">@dimen/user_grid_spacing</item>

    </style>

</resources>
